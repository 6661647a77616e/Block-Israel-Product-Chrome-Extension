{
  "manifest_version": 3,
  "name": "Block Israel Products",
  "version": "1.0",
  "description": "Block boycotted products from Shopee and Lazada",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": ["*://*.shopee.com.my/*"],
  "content_scripts": [
    {
      "matches": ["*://*.shopee.com.my/*"],
      "js": ["app/content_scripts/shopee.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "app/popup/popup.html",
    "default_title": "Boycott Stats"
  },
  "web_accessible_resources": [
    {
      "resources": ["boycott_list.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
